{
  "name": "cloud-native-node-starter",
  "version": "0.0.6",
  "description": "A cloud native boilerplate Node.js project builder, complete with monitoring and orchestration",
  "repository": "https://github.com/grantgarland/Cloud-Native-Node-Starter",
  "private": false,
  "bin": {
    "cloud-native-node-starter": "bin/cloud-native-node-starter"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,json} && standard --fix",
    "lint": "standard",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "src",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "express": "^4.17.1",
    "figlet": "^1.2.4",
    "gluegun": "latest",
    "path": "^0.12.7",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "jest": "^24.1.0",
    "prettier": "^1.12.1",
    "standard": "^12.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
